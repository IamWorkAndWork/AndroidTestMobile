<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:layout_width="@dimen/img_size_large"
            android:layout_height="@dimen/img_size_large"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person"></ImageView>

        <TextView
            android:id="@+id/txtFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/appbar_padding_top"
            android:gravity="center"
            android:textAppearance="@style/txtLabelFullName"
            tools:text="@string/app_name"></TextView>

        <TextView
            android:id="@+id/txtBirthDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/appbar_padding_top"
            android:gravity="center"
            android:textAppearance="@style/txtLabelBirthDate"
            tools:text="@string/app_name"></TextView>


        <Button
            android:id="@+id/btRemove"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/appbar_padding_top"
            android:background="@drawable/button_delete"
            android:text="@string/remove"
            android:textAllCaps="false"
            android:textColor="@color/red"></Button>

    </LinearLayout>

</FrameLayout>